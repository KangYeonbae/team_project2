<div class = "chart_box1">
<h1>Seoul Top12 Station</h1>
<canvas id="totalChart"></canvas>

<script>
    var ctx = document.getElementById('totalChart').getContext('2d');
    var totalChart = new Chart(ctx, {
                type: 'bar',
                data: {
                    labels:<%- stationName%>,
                    datasets: [{
                        label: 'total top12',
                        data:<%- totalData%>,
                        backgroundColor: 'rgba(152, 23, 12, 0.2)',
                        borderColor: 'rgba(255, 9, 12, 1)',
                        borderWidth: 1
                    }],
                },
                    options: {
                        scales: {
                            y: {
                                beginAtZero: true
                            }
                        }
                    }
              });

</script>
