            border-radius: 4px;
            padding: 15px;
            margin-top: 20px;
        }

        .comment:not(:last-child) {
            margin-bottom: 15px;
        }

        .comment-content {
            background-color: #fff;
            padding: 10px;
            border-radius: 4px;
        }

        .comment-buttons {
            text-align: right;
            padding-top: 10px;
        }

        .comment-buttons button, .submit-button, .reply-button, .button {
            background-color:  #FF9090;
            color: white;
            border: none;
            padding: 8px 16px;
            margin: 5px;
            border-radius: 4px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        .comment-buttons button:hover, .submit-button:hover, .reply-button:hover, .button:hover {
            background-color: #FF9090;
        }

        .container3 .button {
            display: block;
            text-align: center;
            width: 100%;
        }

        .center {
            text-align: center;
        }

        .comment-input {
            width: calc(100% - 30px);
            padding: 15px;
            border: 1px solid #ddd;
            border-radius: 4px;
            margin-bottom: 10px;
            resize: vertical;
        }

        .like-button-image {
            width: 24px;
            height: 24px;
            cursor: pointer;
            transition: transform 0.3s ease;
        }

        .like-button-image:hover {
            transform: scale(1.1);
        }

        #like-button {
            display: flex;
            align-items: center;
            cursor: pointer;
        }

        #like-button img {
            margin-right: 10px;
        }

        /* 반응형 디자인 */
        @media (max-width: 768px) {
            .container {
                padding: 10px;
            }

            .comment-input, .comment-buttons button, .submit-button, .reply-button, .button {
                padding: 8px 12px;
            }

            .comment-buttons button, .reply-button, .button {
                font-size: 14px;
            }
        }
        .navigation-buttons {
            display: flex;
            justify-content: center;
            padding: 20px 0;
        }

        .navigation-buttons .button {
            margin: 0 10px; /* 좌우 간격을 10px로 조정 */
            padding: 10px 20px; /* 내부 패딩을 늘려 클릭 영역을 넓힘 */
            font-size: 16px; /* 폰트 크기를 조정 */
            text-decoration: none; /* 텍스트 밑줄 제거 */
            background-color: #4CAF50; /* 버튼 배경색 */
            color: white; /* 버튼 텍스트 색상 */
            border-radius: 5px; /* 모서리 둥글게 */
            transition: background-color 0.3s; /* 호버 효과를 위한 전환 */
        }

        .navigation-buttons .button:hover {
            background-color: #367c39; /* 버튼 호버시 색상 변경 */
        }


        /* 반응형 디자인에서도 조정 */
        @media (max-width: 768px) {
            .navigation-buttons .button {
                padding: 8px 12px;
                font-size: 14px;
            }
        }

    </style>
</head>
