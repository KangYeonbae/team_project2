        <th>주제</th>
        <th>제목</th>
        <th>작성자</th>
        <th>작성일</th>
        <th>조회수</th>
    </tr>
    </thead>
    <tbody>
    <% for (let i = 0; i < posts.length; i++) { %>
        <tr>
            <td><%= posts[i][1] %></td>
            <td><a href="/md_detailPost/<%= posts[i][0] %>" class="post-link"><%= posts[i][3] %> [<%= posts[i][6] %>] </a></td>
            <td><%= posts[i][2] %></td>
            <td><%= posts[i][4] %></td>
