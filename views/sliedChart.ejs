                <canvas id="myChart" ></canvas>
                <script>
                    // 첫 번째 차트 생성
                    var ctx1 = document.getElementById('myChart').getContext('2d');
                    var myChart = new Chart(ctx1, {
                        type: 'bar',
                        data: {
                            labels:<%- labels%>,
                            datasets: [{
                                label: 'Chart Data',
                                data:<%- data%>,
                                backgroundColor: 'rgba(255, 99, 132, 0.2)',
                                borderColor: 'rgba(255, 99, 132, 1)',
                                borderWidth: 1
                            }]
                        },
                        options: {
                            scales: {
                                y: {
