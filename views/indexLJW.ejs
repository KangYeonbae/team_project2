<div class="paging-container">
    <% if (currentPage > 1) { %>
        <a href="/boardLJW/?page=<%= currentPage - 1 %>">이전</a>
    <% } %>

    <% for (let i = startPage; i <= endPage; i++) { %>
        <% if (i === currentPage) { %>
            <span class="current-page"><%= i %></span>
        <% } else { %>
            <a href="/boardLJW/?page=<%= i %>"><%= i %></a>
        <% } %>
    <% } %>

    <% if ((totalPages - currentPage + 1) > maxPageNumber) { %>
        <a href="/boardLJW/?page=<%= currentPage + 1 %>">다음</a>
    <% } %>
